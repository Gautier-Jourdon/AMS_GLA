{
  "name": "ams_gla",
  "version": "1.0.0",
  "description": "Ce projet a pour but de créer une plateforme capable de collecter, stocker et analyser des données de cryptomonnaies.   Le développement suit une approche structurée et met en avant les bonnes pratiques du génie logiciel.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "amqplib": "^0.10.9",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "data-uri-to-buffer": "^4.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fetch-blob": "^3.2.0",
    "formdata-polyfill": "^4.0.10",
    "fs": "^0.0.1-security",
    "inherits": "^2.0.3",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^3.0.3",
    "node-domexception": "^1.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "path": "^0.12.7",
    "pg": "^8.11.0",
    "process": "^0.11.10",
    "util": "^0.10.4",
    "web-streams-polyfill": "^3.3.3"
  },
  "scripts": {
    "start": "node collector/index.js",
    "scheduler": "node scheduler/publisher.js",
    "worker": "node worker/consumer.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "service": "node collector/services/coincapService.js",
    "webui": "node server.js",
    "apply-schemas": "node scripts/apply-schemas.js",
    "docker-psql-assets": "node scripts/docker-psql-assets.js",
    "show-assets": "node scripts/show-assets.js",
    "exec-show-assets": "node scripts/exec-show-assets.js"
  },
  "verify-db": "node scripts/verify-db.js",
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "webui/**/*.js",
      "server.js",
      "collector/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@jest/globals": "^30.2.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.3.0",
    "supertest": "^6.3.3"
  }
}
